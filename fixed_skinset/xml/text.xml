<a:text name="text">
    <a:style><![CDATA[
        .text {
            border           : 1px solid #c3c3c3;
            background-color : white;
            padding          : 4px;
            overflow         : auto;
            font-family      : Arial;
            font-size        : 8pt;
            color            : #545454;
        }
        
        .emptyMain, 
        .allMain {
            background-color : #f1f1f1;
        }
    
        .packager .text {
            font-size : 9pt;
            border    : none;
            color     : #999999;
        }
        
        .textEmpty, 
        .textLoading {
            font-size   : 8pt;
            font-weight : normal;
            color       : #aaa;
        }
        
        .textFocus {
        }
    ]]></a:style>

    <a:presentation>
        <a:main container=".">
            <div class='text'></div>
        </a:main>
    </a:presentation>
</a:text>