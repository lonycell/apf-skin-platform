<a:accordion name="accordion">
    <a:style><![CDATA[
        .accordion_apf_ver {
            overflow     : hidden;
            color        : #4b4b4b;
            height       : auto;
            width        : 100%;
            position     : relative;
            padding      : 0;
            border       : 1px solid #c3c3c3;
            border-width : 1px 1px 0 1px;
            display      : block;
        }
    
        .accordion_apf_ver .panel {
            padding          : 0;
            font-size        : 11px;
            font-family      : Tahoma;
            background-color : white;
            height           : auto;
            margin           : 0;
            position         : relative;
            overflow         : hidden;
            display          : block;
        }
        
        .accordion_apf_ver .ending {
            display : none;
        }
        
        .accordion_apf_ver .panel .title {
            background-image    : url(images/accordion_apf_title.png);
            background-position : 0 0;
            height              : 12px;
            color               : #4b4b4b;
            font-size           : 11px;
            padding             : 3px 0 5px 4px;
            position            : relative;
            display             : block;
            overflow            : hidden;
            cursor              : pointer;
            border-bottom       : 1px solid #c3c3c3;
        }
        
        .accordion_apf_ver .panel .title .icon {
            width               : 12px;
            height              : 10px;
            position            : absolute;
            right               : 7px;
            top                 : 5px;
            background-repeat   : no-repeat;
            background-position : 6px 50%;
        }
        
        .accordion_apf_ver .active .title .icon{
            background-position : -4px 50%;
        }
        
        /*
        .accordion_apf_ver .panel .title:hover .icon 
        
        .accordion_apf_ver .panel .title:hover {
            background-position : 0 -20px;
            color               : white;
        }*/
        
        .accordion_apf_ver .active .title {
            background-position : 0 -20px;
            color               : white;
        }
        
        .accordion_apf_ver .panel .body {
            position       : relative;
            padding        : 0;
            overflow       : hidden;
            display        : none;
            white-space    : nowrap;
            height         : 100%;
            width          : 100%;
            border-bottom  : 1px solid #c3c3c3;
        }
    ]]></a:style>
    <a:style condition="apf.isIE">
    
    </a:style>
    <a:presentation>
        <a:main container="." direction="vertical">
            <div class="accordion_apf_ver"> </div>
        </a:main>
        <a:bar
          inherit   = "true"
          container = "div[2]"
          title     = "div"
          body      = "div[2]"
          icon      = "div/div">
            <span class="panel">
                <div class="title">
                    <span> </span>
                    <div class="icon"> </div>
                </div>
                <div class="body">
                
                </div>
            </span>
        </a:bar>
        <a:ending container=".">
            <span class="ending"></span>
        </a:ending>
    </a:presentation>
</a:accordion>

<a:accordion name="accordion_apf_hor">
    <a:style><![CDATA[
        .accordion_apf_hor {
            overflow-x   : auto;
            overflow-y   : hidden;
            color        : #4b4b4b;
            height       : 200px;
            width        : auto;
            min-width    : 10px;
            position     : relative;
            padding      : 0;
            border       : 1px solid #d7d7d7;
            border-width : 1px 0 1px 1px;
            white-space  : nowrap;
        }
    
        .accordion_apf_hor .panel {
            padding          : 0;
            font-size        : 11px;
            font-family      : Tahoma;
            background-color : white;
            height           : 100%;
            margin           : 0;
            position         : relative;
            overflow         : hidden;
            float            : left;
            width            : auto;
        }
        
        .accordion_apf_hor .ending {
            display : none;
        }
        
        .accordion_apf_hor .panel .title {
            background-image    : url(images/accordion_apf_title_hor.png);
            background-position : 0 0;
            width               : 12px;
            color               : black;
            font-size           : 11px;
            padding             : 4px 5px 4px 3px;
            position            : relative;
            display             : block;
            height              : 100%;
            float               : left;
            cursor              : pointer;
            border-right        : 1px solid #d7d7d7;
            overflow            : hidden;
        }
        
        .accordion_apf_hor .panel .title span {
            writing-mode      : tb-rl;
            /*filter: flipv fliph;*/
            text-align        : left;
            text-indent       : 10px;
            display           : block;
            -webkit-transform : rotate(90deg); 
            -moz-transform    : rotate(90deg); 
        }
        
        .accordion_apf_hor .panel .title .icon {
            width               : 12px;
            height              : 10px;
            position            : absolute;
            bottom              : 15px;
            margin              : 0 auto;
            background-position : 50% 6px;
            background-repeat   : no-repeat;
        }
        
        .accordion_apf_hor .active .title .icon {
            background-position : 50% -4px;
        }
        
        /*
        .accordion_apf_hor .panel .title:hover .icon, 
        .accordion_apf_hor .panel .title:hover {
            background-position : -20px 0;
            color               : white;
        }*/
        
        .accordion_apf_hor .active .title {
            background-position : -20px 0;
            color               : white;
        }
        
        .accordion_apf_hor .panel .body {
            position     : relative;
            display      : none;
            float        : left;
            height       : 100%;
            border-right : 1px solid #d7d7d7;
            overflow     : hidden;
        }
        
        .accordion_apf_hor .panel .body .header {
            font-size           : 14px;
            font-weight         : bold;
            background-image    : url(images/accordion_header.png);
            background-position : 0 0;
            background-repeat   : repeat-x;
            padding             : 10px 10px 12px 10px;
            color               : white;
            margin-top          : 15px;
            white-space         : nowrap;
            overflow            : hidden;
        }
    ]]></a:style>

    <a:presentation>
        <a:main container="." direction="horizontal">
            <div class="accordion_apf_hor"> </div>
        </a:main>
        <a:bar
          inherit   = "true"
          container = "div[2]"
          title     = "div"
          caption   = "div/span"
          body      = "div[2]"
          icon      = "div/div">
            <span class="panel">
                <div class="title">
                    <span> </span>
                    <div class="icon"> </div>
                </div>
                <div class="body">
                
                </div>
            </span>
        </a:bar>
        <a:ending container=".">
            <span class="ending"></span>
        </a:ending>
    </a:presentation>
</a:accordion>

<a:accordion name="accordion_menu">
    <a:style><![CDATA[
        .accordion_menu {
            overflow-x  : hidden;
            overflow-y  : hidden;
            color       : #4b4b4b;
            height      : 200px;
            width       : auto;
            position    : relative;
            padding     : 0;
            white-space : nowrap;
        }
        
        .accordion_menu .rounded {
            width               : 15px;
            float               : left;
            height              : 100%;
            background-image    : url(images/accordion_menu_rounded.png);
            background-repeat   : no-repeat;
            background-position : 0 0;
            position            : relative;
            overflow            : hidden;
            padding             : 0;
            margin              : 2px 0 0 0; /* 2px Only for demo section */
            border-right        : 1px solid #c4de9a;
        }
        
        .accordion_menu .ending {
            width               : 15px;
            float               : left;
            height              : 100%;
            background-image    : url(images/accordion_menu_rrounded.png);
            background-repeat   : no-repeat;
            background-position : 0 0;
            position            : relative;
            overflow            : hidden;
            padding             : 0;
            margin              : 2px 0 0 0; /* 2px Only for demo section */
        }
    
        .accordion_menu .panel {
            padding          : 0;
            font-size        : 11px;
            font-family      : Tahoma;
            background-color : white;
            height           : 100%;
            margin           : 0;
            position         : relative;
            overflow         : hidden;
            float            : left;
            
        }
        
        .accordion_menu .panel .title {
            background-image    : url(images/accordion_menu_title.png);
            border-right        : 1px solid #c4de9a;
            background-position : 0 0;
            width               : 52px;
            color               : white;
            font-size           : 11px;
            padding             : 4px;
            position            : relative;
            display             : block;
            height              : 100%;
            float               : left;
            cursor              : pointer;
        }
        
        .accordion_menu .panel .title .icon {
            width               : 100%;
            height              : 100%;
            background-repeat   : no-repeat;
            background-position : 50% 50%;
        }
        
        .accordion_menu .active .title,
        .accordion_menu .panel .title:hover {
            background-position : -60px 0;
            color               : white;
        }
        
        .accordion_menu .panel .body {
            position         : relative;
            display          : none;
            float            : left;
            height           : 98px;
            border-top       : 1px solid #d7d7d7;
            border-right     : 1px solid #d7d7d7;
            border-bottom    : 1px solid #d7d7d7;
            background-image : url(images/accordion_menu_bg.png);
        }
    ]]></a:style>
    <a:style condition="apf.isIE">
        .accordion_menu .rounded, 
        .accordion_menu .ending {
            top : -2px;
        }
    </a:style>
    <a:style condition="apf.isIE8">
        .accordion_menu .rounded, 
        .accordion_menu .ending {
            top   : 0;
            float : left;
        }
        .accordion_menu .panel {
            float : left;
        }
    </a:style>

    <a:presentation>
        <a:main container="." direction="horizontal">
            <div class="accordion_menu">
                <span class="rounded"></span>
            </div>
        </a:main>
        <a:bar
          inherit   = "true"
          container = "div[2]"
          title     = "div"
          body      = "div[2]"
          icon      = "div/div">
            <span class="panel">
                <div class="title">
                    <span> </span>
                    <div class="icon"> </div>
                </div>
                <div class="body">
                
                </div>
            </span>
        </a:bar>
        <a:ending container=".">
            <span class="ending"></span>
        </a:ending>
    </a:presentation>
</a:accordion>