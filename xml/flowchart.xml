<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:flowchart name="flowchart">
        <a:style><![CDATA[
            .flowchart {
                border           : 1px solid #c3c3c3;
                background-color : #EEEEEE;
                width            : 450px;
                height           : 500px;
                overflow         : auto;
                margin           : 0;
                padding          : 0;
                background-image : url(images/flowchart/grid.png);
                position         : absolute;
                font-family      : Tahoma;
                font-size        : 8pt;
                text-align       : center;
                border-width     : 0 1px 1px 0;
            }
            
            .flowchart .scrollPointer {
                position            : absolute;
                display             : block;
                width               : 1px;
                height              : 1px;
                left                : 0;
                top                 : 0;
            }
        
            .flowchart .block {
                padding             : 0;
                float               : left;
                display             : inline;
                background-repeat   : no-repeat;
                position            : absolute;
                background-position : 50% 50%;
                border              : 1px solid transparent;
                margin-top          : -1px;
                margin-left         : -1px;
                cursor              : move;
                z-index             : 1001;
            }
        
            .flowchart .block DIV {
                margin : 0;
                border : 0;
            }
        
            .flowchart .block BLOCKQUOTE {
                margin           : 0;
                border           : 0;
                color            : black;
                background-color : transparent;
                cursor           : default;
            }
            
            .flowchart .block .outside {
                position : relative;
                top      : 5px;
                z-index  : 3003;
            }
            
            .flowchart .block .inside {
                position    : absolute;
                top         : 50%;
                left        : 50%;
                color       : black;
                margin-left : -10px;
                z-index     : 3003;
            }
        
            .flowchart .block .selected {
                background-color : #003663;
                color            : white;
            }
        
            .flowchart #txt_rename {
                border           : 1px solid silver;
                padding          : 1px;
                font-family      : Tahoma;
                font-size        : 11px;
                color            : black;
                word-break       : keep-all;
                overflow         : hidden;
                cursor           : text;
                width            : 100px;
                text-align       : left;
                background-color : white;
            }
    
            .flowchart .selected {
                border      : 1px solid #00ff00;
                margin-top  : -1px;
                margin-left : -1px;
            }
        
            .flowchart .locked {
                border           : 1px solid red;
                background-color : #ebebeb;
                margin-top       : -1px;
                margin-left      : -1px;
                cursor           : default;
            }
        
            .flowchart .empty {
                background       : url(images/flowchart/emptyblock.jpg) repeat-x 0 0;
                background-color : #e1e1e1;
            }
            
            .flowchart .label {
                height      : 14px;
                width       : 50px auto;
                display     : block;
                position    : absolute;
                font-size   : 11px;
                font-family : Tahoma;
                margin      : 0;
                padding     : 0;
                text-align  : left;
                overflow    : visible;
                white-space : nowrap;
            }
            
            .flowchart .labelSelected {
                border      : 1px dotted #acacac;
                margin-top  : -1px;
                margin-left : -1px;
            }
            
            .flowchart .connector-end {
                height   : 9px;
                width    : 9px;
                display  : block;
                position : absolute;
                z-index  : 900;
            }
            
            .flowchart .arrow {
                background : url(images/flowchart/con_end_arrow5.png) no-repeat 0 0;
            }
            
            .flowchart .ortop {
                margin-left         : -1px;
                background-position : 0 -9px;
            }
            .flowchart .orbottom {
                margin-left         : -1px;
                background-position : 0 -27px;
            }
            
            .flowchart .orleft {
                margin-top : -1px;
            }
            
            .flowchart .orright {
                margin-top          : -1px;
                background-position : 0 -18px;
            }
        
            .flowchart .segment {
                background-color : transparent; /* transparent*/ 
                border           : 0;
                position         : absolute;
                display          : block;
                z-index          : 800;
            }
        
            .flowchart .seg_ver {
                background-image    : url(images/flowchart/seg_ver.png);
                background-position : 0 0;
            }
        
            .flowchart .seg_ver_clicked {
                background-position : 28px 0;
            }
        
            .flowchart .seg_ver_hover {
                background-position : 21px 0;
            }
            
            .flowchart .seg_ver_selected {
                background-position : 14px 0;
            }
            .flowchart .seg_ver_virtual {
                background-position : 7px 0;
            }
        
            .flowchart .seg_hor {
                background-image    : url(images/flowchart/seg_hor.png);
                background-position : 0 0;
            }
        
            .flowchart .seg_hor_clicked {
                background-position : 0 28px;
            }
        
            .flowchart .seg_hor_hover {
                background-position : 0 21px;
            }
        
            .flowchart .seg_hor_selected {
                background-position : 0 14px;
            }
            
            .flowchart .seg_hor_virtual {
                background-position : 0 7px;
            }
        
            .flowchart .input {
                position            : absolute;
                background-image    : url(images/flowchart/output.png);
                background-repeat   : no-repeat;
                background-position : 50% 50%;
                background-color    : transparent;
                width               : 13px;
                height              : 13px;
                display             : block;
                z-index             : 1001;
                cursor              : crosshair;
            }
            
            .flowchart .inputHover {
                background-image : url(images/flowchart/output_hover.png);
                border           : 6px solid red;
                background-color : red;
                margin-left      : -6px;
                margin-top       : -6px;
            }
        
            .flowchart .inputSelected {
                background-image : url(images/flowchart/output_selected.png);
            }
        
            .flowchart .vMB {
                width    : 1px;
                height   : 1px;
                display  : none;
                position : absolute;
                left     : 0;
                top      : 0;
                padding  : 0;
                margin   : 0;
            }
        
            .flowchart .square {
                border           : 1px solid black;
                background-color : #00ff00;
                position         : absolute;
                width            : 6px;
                height           : 6px;
                display          : none;
                z-index          : 900;
            }
            
            .flowchart .squareHover {
                border           : 1px solid black;
                background-color : #005e20;
            }
        ]]></a:style>
        <a:style condition="apf.isGecko"><![CDATA[
            .flowchart .connector-end {
                margin : 0;
            }
        ]]></a:style>
    
        <a:presentation>
            <a:main container=".">
                <div class='flowchart'> </div>
            </a:main>
            <a:item
              imagecontainer = "div"
              image          = "div/img"
              select         = "."
              caption        = "blockquote">
                <div class="block">
                    <div>
                        <img src="" />
                    </div>
                    <blockquote>-</blockquote>
                </div>
            </a:item>
            <a:empty caption="text()">
                <div class="empty">-</div>
            </a:empty>
        </a:presentation>
    </a:flowchart>
    <a:flowchart name="flowchart2">
        <a:style><![CDATA[
            .flowchart {
                position         : relative;
                width            : 450px;
                height           : 500px;
                overflow         : auto;
                margin           : 0;
                padding          : 0;
            }
            
            .flowchart .workarea {
                width               : 800px;
                height              : 600px;
                position            : relative;
                background-color    : #EEEEEE;
                background-image    : url(images/flowchart/grid.png);
                background-position : 0 0;
                padding             : 0;
                margin              : 0;
            }
            
            .flowchart .block {
                position         : absolute;
                overflow         : visible;
                background-color : red;
                border           : 1px solid blue;
            }
            
            .flowchart .selected {
                border : 1px solid yellow;
            }
            
            .flowchart .block .image_container {
                position : absolute;
                left     : 0
                top      : 0;
                bottom   : 0;
                right    : 0;
            }
            
            .flowchart .block .image_container IMG {
                display : block;
            }
            
            .flowchart .block .caption {
                position         : absolute;
                left             : 0;
                bottom           : -16px;
                height           : 14px;
                width            : 56px;
                background-color : blue;
                color            : white;
            }
            
            /* Inputs */
            .flowchart .block .input {
                position : absolute;
            }
            
            .flowchart .block .top,
            .flowchart .block .bottom {
                width            : 1px;
                height           : 4px;
                background-color : black;
            }
            
            .flowchart .block .top {
                margin-top : -4px;
            }
            
            .flowchart .block .left,
            .flowchart .block .right {
                width            : 4px;
                height           : 1px;
                background-color : black;
            }
            
            .flowchart .block .left {
                margin-left : -4px;
            }
            
            .flowchart .block .left.itype3,
            .flowchart .block .right.itype3 {
                height : 3px;
            } 
            
            .flowchart .block .top.itype3,
            .flowchart .block .bottom.itype3 {
                width : 3px;
            } 
            
            
            /* Blocks types */
            .flowchart .capacitor {
                
            }

        ]]></a:style>
    
        <a:presentation>
            <a:main container="div">
                <div class="flowchart">
                    <div class="workarea"> </div>
                </div>
            </a:main>
            <a:item
              select         = "."
              imagecontainer = "div[1]"
              image          = "div[1]/img"
              caption        = "div[2]">
                <div class="block">
                    <div class="image_container">
                        <img src="about:blank" />
                    </div>
                    <div class="caption">-</div>
                </div>
            </a:item>
            
            <a:empty caption="text()">
                <div class="empty">-</div>
            </a:empty>
        </a:presentation>
    </a:flowchart>
</a:skin>