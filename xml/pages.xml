<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:pages name="pages">
        <a:style><![CDATA[
            .pages {
            }
        
            .pages .page {
                display  : none;
                height   : 100%;
                position : relative;
            }
        
            .pages .curpage {
                display : block;
            }
        ]]></a:style>
    
        <a:presentation>
            <a:main 
              pages     = "."
              minwidth  = "150"
              minheight = "50">
                <div class="pages">
                </div>
            </a:main>
            <a:page container=".">
                <div class="page"></div>
            </a:page>
        </a:presentation>
    </a:pages>
</a:skin>