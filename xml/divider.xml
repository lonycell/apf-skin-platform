<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:divider name="divider">
        <a:style><![CDATA[
            .divider {
                height       : 0;
                border       : 1px solid white;
                border-width : 1px 0 1px 0;
                border-color : #c3c3c3 white white #c3c3c3;
                line-height  : 0;
                margin       : 10px 0 10px 0;
                cursor       : default;
            }
            
            .hbox .divider, 
            .vdivider {
                width        : 0;
                margin       : 0 10px 0 10px;
                height       : 17px;
                border-width : 0 1px 0 1px;
                height       : 17px;
            }
            
            .divider SPAN {
                color      : #333;
                background : #f5f5f5;
                padding    : 0 2px 0 2px;
                position   : relative;
                top        : -1px;
                display    : none;
                font-size  : 8pt;
            }
            
            .table .divider, 
            .vbox .divider, 
            .hbox .divider {
                margin : 0;
            }
        ]]></a:style>
        
        <a:presentation>
            <a:main 
              container = "." 
              caption   = "span" 
              minheight = "2" 
              minwidth  = "2">
                <div class="divider"><span> </span> </div>
            </a:main>
        </a:presentation>
    </a:divider>
</a:skin>