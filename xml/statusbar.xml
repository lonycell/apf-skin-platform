<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:statusbar name="statusbar">
        <a:style><![CDATA[
            .statusbar {
                border-top : 1px solid #b2b2b2;
                overflow   : hidden;
                color      : #4b4b4b;
                background : url(images/statusbar.gif);
                height     : 21px;
                width      : 100%;
                overflow   : hidden;
                position   : absolute;
                bottom     : 0;
                padding    : 0 0 0 0;
            }
        
            .statusbar .sbsection {
                padding      : 1px 5px 0 5px;
                font-size    : 11px;
                font-family  : Tahoma;
                background   : no-repeat 3px 1px;
                height       : 15px;
                float        : left;
                margin       : 2px 0 0 0;
                border-right : 1px solid #c3c3c3;
                border-left  : 1px solid #FFFFFF;
                position     : relative;
            }
            
            .statusbar .sbsectionLast {
                float        : none;
                margin       : 0 0 0 0;
                border-right : 0;
                padding      : 3px 3px 3px 5px;
                position     : relative;
                overflow     : hidden;
            }
            
            .statusbar .sbsectionIcon {
                padding-left : 23px
            }
            
            .windowMax .statusbar .corner {
                display : none;
            }
        
            .statusbar .corner {
                width    : 13px;
                height   : 13px;
                position : absolute;
                right    : 0;
                top      : 7px;
                display  : block;
            }
            
            .sbbare {
                position   : relative;
                border-top : 0;
            }
        ]]></a:style>
    
        <a:presentation>
            <a:main container="." corner="span">
                <div class='statusbar'>
                    <span class='corner'></span>
                </div>
            </a:main>
            <a:section icon="." caption="text()" container="." inherit="true">
                <div class='sbsection'> </div>
            </a:section>
        </a:presentation>
    </a:statusbar>
</a:skin>