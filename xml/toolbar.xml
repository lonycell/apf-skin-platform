<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:toolbar name="toolbar">
        <a:style><![CDATA[
            .toolbar .menubar {
                background    : url(images/menubar_row.png) repeat-x top left;
                height        : 21px;
                font-family   : Tahoma;
                font-size     : 11px;
                border-bottom : 1px solid #c3c3c3;
                position      : relative;
            }
            
            .toolbar .subbar {
                background    : url(images/toolbar_row.png) repeat-x top left;
                height        : 25px;
                font-family   : Tahoma;
                font-size     : 11px;
                border-bottom : 1px solid #c3c3c3;
                position      : relative;
                padding       : 0;
                width         : 100%;
            }
            
            .toolbar>.subbar>* {
                display : inline-block;
                float   : left;
                margin  : 2px;
            }
            
            .toolbar>.subbar>.hbox, 
            .toolbar>.subbar>.vbox, 
            .toolbar>.subbar>.table {
                display : block;
                float   : none;
                margin  : 0;
            }
    
            .toolbar>.subbar>.divider {
                border-left  : 1px solid #c3c3c3;
                border-right : 1px solid #FFFFFF;
                height       : 17px;
                float        : left;
                margin       : 4px 0 0 0;
            }
        ]]></a:style>
    
        <a:presentation>
            <a:main container=".">
                <div class="toolbar"> </div>
            </a:main>
            <a:bar container="." inherit="true">
                <div class="subbar"> </div>
            </a:bar>
            <a:menubar container="." inherit="true">
                <div class="menubar">
                </div>
            </a:menubar>
            <a:button link="toolbarbutton" inherit="true" />
            <a:divider inherit="true">
                <div class='divider'> </div>
            </a:divider>
        </a:presentation>
    </a:toolbar>
</a:skin>