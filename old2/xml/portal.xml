<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:portal name="portal">
        <a:style><![CDATA[
            .portal {
                overflow : hidden;
                position : relative;
            }
            
            .portal .column {
                /*background-color : #EEEEEE;*/
                /*position : relative;*/
                /*position : absolute;*/
                height : 100%;
                width  : 33.33%;
                float  : left;
            }
            
            .portal .position_holder {
                border : 2px dashed #3b5998;
                margin : 0 10px 10px 0;
            }
        ]]></a:style>
    
        <a:presentation>
            <a:main container=".">
                <div class='portal'> </div>
            </a:main>
            <a:column>
                <div class="column"> </div>
            </a:column>
            <a:loading>
                <div class="loading">Loading...</div>
            </a:loading>
            <a:empty caption="text()">
                <div class="empty">-</div>
            </a:empty>
        </a:presentation>
    </a:portal>
</a:skin>